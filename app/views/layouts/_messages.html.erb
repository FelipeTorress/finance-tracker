<% flash.each do |name, msg|%>
  <% if name == "notice" %>
    <div class="alert alert-success message_box alert-dismissible fade show"> 
      <%= msg %> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% else %>
    <div class="alert alert-danger message_box alert-dismissible fade show"> 
      <%= msg %> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>